{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "vercel:install": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build", "registry:build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "out/**"],
      "env": ["NODE_ENV", "VERCEL_ENV", "VERCEL_URL", "INKEEP_API_KEY"]
    },
    "registry:build": {
      "cache": true,
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "env": ["LOG_LEVEL", "REGISTRY_HOST"],
      "outputs": ["public/r/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "cache": false,
      "persistent": false
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    }
  }
}
