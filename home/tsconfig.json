{
	"compilerOptions": {
		"target": "ES6",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"noEmit": false,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"paths": {
			"@/*": ["./src/*"],
			"@limeplay/core": ["../packages/limeplay-core/src"],
			"shaka-player": [
				"../packages/limeplay-core/node_modules/shaka-player/dist/shaka-player.compiled.js"
			]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"../packages/limeplay-core/src/types/**/*",
		"../@types"
	],
	"exclude": ["node_modules"]
}
