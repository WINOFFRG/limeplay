{
	"name": "@limeplay/core",
	"version": "0.2.4",
	"description": "React UI library for Shaka Player focused on usability, accessibility, performance and developer experience",
	"main": "src/index.ts",
	"files": [
		"dist"
	],
	"sideEffects": false,
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"@emotion/cache": "^11.10.7",
		"@emotion/react": "^11.10.5",
		"@mantine/styles": "^6.0.4",
		"@use-gesture/react": "^10.2.25",
		"lodash": "^4.17.21",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"screenfull": "^6.0.2",
		"shaka-player": "^4.3.3",
		"zustand": "^4.1.4"
	},
	"keywords": [
		"player",
		"react",
		"ui",
		"library",
		"shaka",
		"shaka-player",
		"video",
		"drm",
		"dash",
		"hls",
		"accessible",
		"design-system",
		"components"
	],
	"author": "Rohan Gupta <rohangupta1528@gmail.com>",
	"license": "MIT",
	"homepage": "https://limeplay.me",
	"repository": {
		"type": "git",
		"url": "https://github.com/winoffrg/limeplay",
		"directory": "packages/limeplay-core"
	},
	"storybook": {
		"title": "Limeplay UI",
		"url": "https://storybook.limeplay.me"
	},
	"scripts": {
		"build": "tsup src --dts --metafile",
		"dev": "pnpm build:fast -- --watch",
		"clean": "rimraf dist .turbo",
		"typecheck": "tsc --noEmit",
		"build:fast": "tsup src",
		"prepack": "clean-package",
		"postpack": "clean-package restore"
	},
	"clean-package": "../../clean-package.config.json",
	"tsup": {
		"clean": true,
		"target": "es2019",
		"format": [
			"cjs",
			"esm"
		]
	}
}
