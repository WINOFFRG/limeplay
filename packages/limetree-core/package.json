		"lodash": "^4.17.21",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"screenfull": "^6.0.2",
		"shaka-player": "^4.3.3",
		"zustand": "^4.1.4"
	},
	"tsup": {
		"clean": true,
		"target": "es2019",
		"format": [
			"cjs",
			"esm"
		]
