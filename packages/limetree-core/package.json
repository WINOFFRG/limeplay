{
	"name": "@limetree/core",
	"description": "React UI library for Shaka Player focused on usability, accessibility, performance and developer experience",
	"version": "1.0.0",
	"main": "src/index.ts",
	"module": "esm/index.js",
	"license": "MIT",
	"author": "Rohan Gupta <rohangupta1528@gmail.com>",
	"scripts": {
		"build": "tsup src --dts",
