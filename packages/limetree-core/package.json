		"build:fast": "tsup src",
		"prepack": "clean-package",
		"postpack": "clean-package restore"
	},
	"dependencies": {
		"@emotion/react": "^11.10.5",
		"@mantine/core": "^6.0.4",
		"@mantine/hooks": "^6.0.4",
